{
  "manifest_version": 2,

  "name": "Playing Favourites for Fallen London",
  "short_name": "Playing Favourites",
  "description": "Unofficial Fallen London extension to quickly choose favourite branches",

  "version": "0.1.1",

  "icons": {
    "16" : "img/icon16.png",
    "32" : "img/icon32.png",
    "48" : "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://fallenlondon.storynexus.com/Gap/Load*"],
      "js": [
        "js/lib/jquery.js",
        "js/lib/mutation-summary.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],

  "background": {
    "scripts": [ 
      "js/background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "*://fallenlondon.storynexus.com/*"
  ],
  
  "minimum_chrome_version": "49",

  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },

  "web_accessible_resources": [
    "img/*"
  ]
}
